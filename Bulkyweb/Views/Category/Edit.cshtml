@model Category

<form method="post">
    @*<input asp-for="Id" hidden />*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">EDIT CATEGORY</h1>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark border form-control">BACK TO LIST</a>
            </div>

        </div>
    </div>
</form>

section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}

}




